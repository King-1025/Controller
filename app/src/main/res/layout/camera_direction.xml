<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center">

	<RelativeLayout
		android:layout_width="180dp"
		android:layout_height="180dp">

		<ImageButton
			android:id="@+id/cameraDirectionSwitch"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:layout_margin="5dp"
			android:background="@drawable/circle_button_seletor"
			android:text="kfd"/>

		<ImageButton
			android:id="@+id/top"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_above="@+id/cameraDirectionSwitch"
			android:layout_centerHorizontal="true"
			android:background="@drawable/vertical_direction_button_seletor"/>

		<ImageButton
			android:id="@+id/right"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignTop="@+id/left"
			android:layout_toEndOf="@+id/cameraDirectionSwitch"
			android:layout_toRightOf="@+id/cameraDirectionSwitch"
			android:background="@drawable/horizontal_direction_button_seletor"/>

		<ImageButton
			android:id="@+id/left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toLeftOf="@+id/cameraDirectionSwitch"
			android:layout_toStartOf="@+id/cameraDirectionSwitch"
			android:background="@drawable/horizontal_direction_button_seletor"/>

		<ImageButton
			android:id="@+id/bottom"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@+id/top"
			android:layout_alignStart="@+id/top"
			android:layout_below="@+id/cameraDirectionSwitch"
			android:background="@drawable/vertical_direction_button_seletor"/>

	</RelativeLayout>

</LinearLayout>

